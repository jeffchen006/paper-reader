# LLM API Keys (choose one or more)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Semantic Scholar API (optional, but recommended for higher rate limits)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# Default LLM provider (openai or anthropic)
LLM_PROVIDER=anthropic

# Default models
# OpenAI options: gpt-4-turbo, gpt-4o, gpt-4, gpt-3.5-turbo
# Recommended: gpt-4-turbo or gpt-4o
OPENAI_MODEL=gpt-4-turbo

# Anthropic options: claude-3-5-sonnet-20241022, claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
# For best quality/comprehension: claude-3-5-sonnet-20241022 (recommended)
# For maximum capability: claude-3-opus-20240229 (flagship model, more expensive)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Number of related papers to retrieve
MAX_PAPERS=10

# PDF download settings
DOWNLOAD_PDFS=true
PDF_DOWNLOAD_TIMEOUT=30
